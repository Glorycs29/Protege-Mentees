#include <iostream>
using namespace std;

void printSquare(int s) {
    string fullRow = "";
    string midRow = "";

    for (int i = 0; i < s; i++) {
        fullRow += "* ";
        midRow += (i == 0 || i == s - 1) ? "* " : "  ";
    }

    for (int i = 0; i < s; i++) {
        if (i == 0 || i == s - 1)
            cout << fullRow << endl;
        else
            cout << midRow << endl;
    }
}

int main() {
    int s;
    cin >> s;
    printSquare(s);
    return 0;
}
