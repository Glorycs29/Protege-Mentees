// Define a class named Solution
class Solution { 
  public: // Access specifier - members under this can be accessed outside the class
    
    // A public member function named 'addition' that takes two integers as parameters
    int addition(int a, int b) {
        // Returns the sum of the two input integers
        return a + b;
    }
};
