// User function Template for C++

void triangle(int s) {

    // Write your code here
    for(int i=0; i<s; i++){
        for(int j=0; j<=i; j++){
            if(j==0 || i==s-1 || i==j){
                cout<<"* ";
            }
            else{
                cout<<"  ";
            }
        }
        cout<<endl;
    }
}
